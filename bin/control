#!/bin/bash

function status() {
  cd ${OPENSHIFT_REPO_DIR}

  ./runtime status
}

function start() {
  pushd ${OPENSHIFT_REPO_DIR}

  export CONSOLE_HOST="${OPENSHIFT_OSGI_IP}:15026"

  if [ ! -e config ]; then
    ln -s ${OPENSHIFT_FELIX_DIR}versions/current/config ${OPENSHIFT_REPO_DIR}config
  fi

  if [ ! -e bundle ]; then
    ln -s ${OPENSHIFT_FELIX_DIR}versions/current/lib ${OPENSHIFT_REPO_DIR}bundle
  fi

  if [ ! -e lib ]; then
    ln -s ${OPENSHIFT_FELIX_DIR}versions/current/lib ${OPENSHIFT_REPO_DIR}lib
  fi

  if [ ! -e logs ]; then
    ln -s ${OPENSHIFT_FELIX_DIR}versions/current/logs ${OPENSHIFT_REPO_DIR}logs
  fi

  if [ ! -e run ]; then
    ln -s ${OPENSHIFT_FELIX_DIR}versions/current/run ${OPENSHIFT_REPO_DIR}run
  fi

  popd
  ./runtime start
}

function stop() {
  ./runtime stop
}

function build() {
  return 0
}

function post-deploy() {
  return 0
}

function pre-build() {
  return 0
}

function tidy() {
  return 0
}

# Wrappers

function restart() {
  stop
  start
}

function update() {
  return 0
}

# Validate input

if ! [ $# -gt 0 ]; then
  echo "Usage: $0 [start|restart|graceful|graceful-stop|stop|status|update]"
  exit 1
fi

# Handle commands.

case "$1" in
  start)               start       ;;
  restart|graceful)    restart     ;;
  graceful-stop|stop)  stop        ;;
  status)              status      ;;
  build)               build       ;;
  pre-build)           pre-build   ;;
  post-deploy)         post-deploy ;;
  tidy)                tidy        ;;
  update)              update      ;;
  *)
esac
